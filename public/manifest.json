{
  "manifest_version": 3,
  "name": "Grow a Garden Stock Notifications",
  "version": "0.0.1",
  "description": "Stock notifications for Grow a Garden (Roblox)",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["notifications", "storage", "alarms"],
  "host_permissions": ["https://gagapi.onrender.com/*"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
